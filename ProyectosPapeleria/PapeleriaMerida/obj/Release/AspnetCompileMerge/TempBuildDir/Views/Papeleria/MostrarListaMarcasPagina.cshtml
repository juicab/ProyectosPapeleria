@using System.Data;
@model DataTable
<section class="ftco-section ftco-no-pb">
    <div class="container">
        <div class="row">
            @foreach (DataRow item in Model.Rows)
            {
                @*barrilito*@
                <div class="col-md-6 col-lg-3 ftco-animate">
                    <div class="staff">
                        <a href="@Url.Action("Categoría", "Papeleria", new { id =item["idMarca"]  })" class="img-wrap d-flex align-items-stretch">
                            <div class="img align-self-stretch" style="background-image: url(../../images/Marcas/@item["logoMarca"]);"></div>
                        </a>
                        <div class="text pt-3 text-center">
                            <h3>@item["nomMarca"]</h3>
                            <div class="faded">
                                <p>@item["sloganMarca"]</p>
                                <ul class="ftco-social text-center">
                                    <li class="ftco-animate"><a href="#"><span class="icon-twitter"></span></a></li>
                                    <li class="ftco-animate"><a href="#"><span class="icon-facebook"></span></a></li>
                                    <li class="ftco-animate"><a href="#"><span class="icon-google-plus"></span></a></li>
                                    <li class="ftco-animate"><a href="#"><span class="icon-instagram"></span></a></li>
                                </ul>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
