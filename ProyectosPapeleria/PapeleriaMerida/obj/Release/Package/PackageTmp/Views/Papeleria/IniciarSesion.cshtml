
@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>PAPELERÍA | PAPELERÍA MÉRIDA</title>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="MAYORISTAS EN PAPELERÍA">
    <link rel="icon" type="image/png" href="~/images/icono.png">
    <link href="~/admin/css/bootstrap.min.css" rel="stylesheet">
    <link href="~/admin/css/datepicker3.css" rel="stylesheet">
    <link href="~/admin/css/styles.css" rel="stylesheet">
    <!--[if lt IE 9]>
    <script src="js/html5shiv.js"></script>
    <script src="js/respond.min.js"></script>
    <![endif]-->
    <style type="text/css">
        .portada {
            background: url(../../images/escritura.jpg) no-repeat fixed center;
            background-size: cover;
            height: 100%;
            width: 100%;
            text-align: center;
        }
    </style>
</head>
<body class="portada">
    <div class="row">
        <div class="col-xs-10 col-xs-offset-1 col-sm-8 col-sm-offset-2 col-md-4 col-md-offset-4">
            <div class="login-panel panel panel-default">
                <div class="panel-heading"><b>Inicio de Sesión</b></div>
                <div class="panel-body">
                    @using (Ajax.BeginForm("IniciarSesion", "Papeleria", new AjaxOptions { HttpMethod = "POST" }))
                    {
                        @Html.AntiForgeryToken()
                    <form role="form">
                        <fieldset>
                            <div class="form-group">
                                <input class="form-control" placeholder="Usuario" required name="usuario" type="text" autofocus="">
                            </div>
                            <div class="form-group">
                                <input class="form-control" placeholder="Contraseña" required name="contra" type="password" value="">
                            </div>
                            <div class="checkbox">
                                <label>
                                    <input name="remember" type="checkbox" value="Remember Me">Recuerdame
                                </label>
                            </div>
                            <input class="btn btn-primary" value="Iniciar Sesión" type="submit" />
                        </fieldset>
                        <br />
                        <a href="/">Regresar al Inicio</a><br />
                    </form>
                    }
                    <br />
                    @if (TempData["ini"] != null)
                    {
                        <div class="alert alert-danger col-md-12" style="text-align:center;" role="alert">
                            <strong>¡OOPS!</strong> Usuario y/o Contraseña Incorrectos.
                        </div>
                    }
                    @if(TempData["sinini"] != null)
                    {
                    <div class="alert alert-info col-md-12" style="text-align:center;" role="alert">
                        <strong>¡OOPS!</strong> Primero debes iniciar sesion.
                    </div>
                    }
                </div>
            </div>
        </div><!-- /.col-->
    </div><!-- /.row -->


    <script src="~/admin/js/jquery-1.11.1.min.js"></script>
    <script src="~/admin/js/bootstrap.min.js"></script>
</body>
</html>
