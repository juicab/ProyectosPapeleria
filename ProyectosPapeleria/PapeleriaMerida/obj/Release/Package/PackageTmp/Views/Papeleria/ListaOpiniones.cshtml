@using System.Data;
@model DataTable
@foreach (DataRow item in Model.Rows)
{
    <div class="item">
        <div class="testimony-wrap d-flex">
            <div class="user-img mr-4" style="background-image: url(../../images/Clientes/@item["imagenCliente"])">
            </div>
            <div class="text ml-2 bg-light">
                <span class="quote d-flex align-items-center justify-content-center">
                    <i class="icon-quote-left"></i>
                </span>
                <p>@item["opinionCliente"].</p>
                <p class="name"></p>
                <span class="position">@item["titulo"]</span>
            </div>
        </div>
    </div>
}

