@model PapeleriaMerida.Models.MarcasModel
@{
    ViewBag.Title = " ▷";
    ViewBag.Parentesis = Model.nomMarca;
    ViewBag.Title2 = Model.sloganMarca;
    ViewBag.descripcion = "✅" + Model.descMarca;
    ViewBag.robots = "index, follow, archive";
    Layout = "~/Views/Master/Publico.cshtml";
}
<style>
    .imgResponsive {
        width: 100%;
        height: auto;
    }
</style>
<section class="hero-wrap hero-wrap-2" style="background-image: url('../../images/Banner/@Model.bannerMarca');">
    <div class=""></div>
    <div class="container">
        <div class="row no-gutters slider-text align-items-center justify-content-center">
            <div class="col-md-9 ftco-animate text-center">
                <h1 class="mb-2 bread" style="color:black;">@Model.nomMarca</h1>
                <p class="breadcrumbs" style="color:black;"><span class="mr-2" style="color:black;"><a style="color:black;" href="@Url.Action("Inicio","Papeleria")">Inicio <i style="color:black;" class="ion-ios-arrow-forward"></i></a></span> <span style="color:black;">@Model.nomMarca</span></p>
            </div>
        </div>
    </div>
</section>
<!-- Papeleria a mayoreo -->
<br />
<section class="ftco-section ftco-no-pt ftc-no-pb">
    <div class="container wrap-about ftco-animate">
        <div class="row">
            <div class="col-md-6 well">
                <h2>@Model.sloganMarca</h2>
                <p style="text-align:justify;">
                    @Model.descMarca
                </p>
            </div>
            <div class="col-md-3 well">
                
                <img class="imgResponsive" src="~/images/Marcas/@Model.logoMarca">
            </div>
            <div class="col-md-3 well">
                <h4>Descargar Catálogo</h4>
                <a href="@Url.Action("Catalogos","Papeleria")"><img class="imgResponsive" src="~/images/DescargaPDF.png"></a>
            </div>
        </div>
    </div>
</section>
<section class="ftco-section ftco-no-pb">
    
    <div class="container">
        <h3>Productos&nbsp;@Model.nomMarca</h3>
        <div class="row">
            @{ Html.RenderAction("ListaProductos", "Papeleria", new { id = Model.idMarca });}
        </div>
    </div>
</section>


