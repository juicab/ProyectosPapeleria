
@{
    ViewBag.Title = "Marca";
    Layout = "~/Views/Master/Admin.cshtml";
}

<!--/.Aqui inicia lo que va dentro del codigo campos-->
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em> 
                </a>
            </li>
            <li class="active">Administrador</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Marcas/Proveedores</h2>
        </div>
    </div><!--/.row-->


    <div class="row">
        @if (TempData["Confirmacion"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>¡BIEN!</strong> Guardado con Éxito.
            </div>
        }
        @if (TempData["cambio"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>¡BIEN!</strong> Los Cambios se han guardado con Éxito.
            </div>
        }
        @if (TempData["eli"] != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>¡BIEN!</strong> Los Datos se han Eliminados con Éxito.
            </div>
        }
        @if (ViewBag.error != null)
        {
            <div class="alert alert-success" role="alert">
                <strong>¡OOPS!</strong> Ocurrio un Error.
            </div>
        }
        @using (Ajax.BeginForm("GuardarMarcas", "Admin", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="col-lg-12">
                <div class="panel panel-default">
                    <div class="panel-heading">Datos</div>
                    <div class="panel-body">
                        <div class="col-md-2">
                            <div class="form-group">
                                <label>Código</label>
                                <input class="form-control" disabled name="cod" type="text">
                            </div>
                        </div>
                        <div class="col-md-10">
                            <div class="form-group">
                                <label>Nombre</label>
                                <input class="form-control" name="nombre" required type="text">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Slogan</label>
                                <input class="form-control" name="slogan" required type="text">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label>Descripción</label>
                                <textarea class="form-control" name="descripcion" required rows="3"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Seleccione Imagen Logo</label>
                                <input type="file" accept="image/*" required name="logo" onchange="PreviewImagen(event)">
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <img style="width: 250px; height: 200px" id="PreviewImageLogo" src="img/picture.png">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label>Seleccione Imagen Banner</label>
                                <input type="file" accept="image/*" required name="banner" onchange="PreviewImage(event)">
                            </div>
                        </div>
                        <div class="col-md-8">
                            <div class="form-group">
                                <img style="width: 650px; height: 250px" id="PreviewImageID" src="img/picture.png">
                            </div>
                        </div>
                    </div>
                    <div class="panel-body">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-md btn-info" value="Guardar" />
                            <a class="btn btn-md btn-danger" href="javascript:window.history.back();">Cancelar</a>
                            <br />
                            <br />
                        </div>
                    </div>
                </div><!-- /.panel-->
            </div><!-- /.panel-->
        }
    </div><!-- /.col-->
    @{ Html.RenderAction("MostrarListaMarca", "Admin");}
    <div class="col-sm-12">
        <p class="back-link">PAPEMÉRIDA-ADMIN <a href="#"></a></p>
    </div>
</div>

<script type="text/javascript">
    function PreviewImage(event) {
        var output = document.getElementById('PreviewImageID');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>
<script type="text/javascript">
    function PreviewImagen(event) {
        var output = document.getElementById('PreviewImageLogo');
        output.src = URL.createObjectURL(event.target.files[0]);
    };
</script>