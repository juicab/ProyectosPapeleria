
@{
    ViewBag.Title = "DatosEmpresa";
    Layout = "~/Views/Master/Admin.cshtml";
}

<!--/.Aqui inicia lo que va dentro del codigo campos-->
<div class="col-sm-9 col-sm-offset-3 col-lg-10 col-lg-offset-2 main">
    <div class="row">
        <ol class="breadcrumb">
            <li>
                <a href="#">
                    <em class="fa fa-home"></em>
                </a>
            </li>
            <li class="active">Administrador</li>
        </ol>
    </div><!--/.row-->

    <div class="row">
        <div class="col-lg-12">
            <h2 class="page-header">Datos de la Empresa</h2>
        </div>
    </div><!--/.row-->


    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">Estos datos son los que apareceran en la página</div>
                <div class="panel-body">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label>Código</label>
                            <input class="form-control" name="cod" type="text" disabled>
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Nombre de la Empresa</label>
                            <input class="form-control" name="nombre" type="text">
                        </div>
                    </div>
                    <div class="col-md-5">
                        <div class="form-group">
                            <label>Teléfono</label>
                            <input class="form-control" name="nombre" type="text">
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Dirección</label>
                            <input class="form-control" name="nombre" type="text">
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label>Correo Electrónico</label>
                            <input class="form-control" name="nombre" type="text">
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Sitio Web</label>
                            <input class="form-control" name="nombre" type="text">
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Misión</label>
                            <textarea class="form-control" name="comentario" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Visión</label>
                            <textarea class="form-control" name="comentario" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <div class="form-group">
                            <label>Valores</label>
                            <textarea class="form-control" name="comentario" rows="3"></textarea>
                        </div>
                    </div>
                </div>
                <div class="panel-body">
                    <div class="col-md-12">
                        <input type="submit" class="btn btn-md btn-info" value="Guardar Cambios" />
                        <br />
                        <br />
                    </div>
                </div>
            </div><!-- /.panel-->
        </div><!-- /.panel-->
    </div><!-- /.col-->
    <div class="col-sm-12">
        <p class="back-link">PapeMérida-Admin <a href="#"></a></p>
    </div>
</div>

