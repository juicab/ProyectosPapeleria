
@{
    ViewBag.Title = "¡ Contactanos !";
    ViewBag.Parentesis = "Papeles y Bolsas de Regalo";
    ViewBag.Title2 = "Nosotros te Llamamos";
    ViewBag.descripcion = "Papeles de Regalo , Estamos ubicados en Mérida Yucatán , No te ARREPENTIRAS";
    Layout = "~/Views/Master/Publico.cshtml";
}
<style>
    .google-maps{
        position:relative;
        padding-bottom:75%;
        height:0;
        overflow:hidden;
    }

    .google-maps iframe{
        position:absolute;
        top:0;
        left:0;
        width:100% !important;
        height:100% !important;
    }
</style>
<!--Titulo Parallax-->
<section class="ftco-section ftco-counter img" id="section-counter" style="background-image: url(../../images/contact.jpg);" >
    <div class="container">
        <div class="row d-md-flex align-items-center justify-content-center">
            <div class="row d-md-flex align-items-center justify-content-center">
                <div class="col-lg-12">
                    <div class="heading-section pl-md-12 heading-section-white">
                        <div class="pl-md-12 ml-md-12 ftco-animate">
                            <span class="subheading"></span>
                            <br />
                            <br />
                            <h2 class="mb-4" style="color:black;">Contactanos</h2>
                            <br />
                            <br />

                        </div>
                    </div>
                </div>
            </div>


        </div>
    </div>
</section>

<section class="ftco-section contact-section">
    <div class="container">
        <div class="row d-flex mb-5 contact-info">
            <div class="col-md-12 mb-4">
                <h2 class="h4">Información</h2>
            </div>
            <div class="w-100"></div>
            <div class="col-md-3">
                <p><span>Direccion:</span> Calle 23a #332 x 18 y 20 San José Vergel Mérida, Yucatán</p>
            </div>
            <div class="col-md-3">
                <p><span>Teléfono:</span> <a href="tel://1234567920">99-91-45-02-12</a></p>
            </div>
            <div class="col-md-3">
                <p><span>Correo:</span> <a href="mailto:info@yoursite.com">ventas@papelesderegalo.com.mx</a></p>
            </div>
            <div class="col-md-3">
                <p><span></span> <a href="#"></a></p>
            </div>
        </div>
        <div class="row block-9">
            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success col-md-12" style="text-align:center;" role="alert">
                    <strong>¡BIEN!</strong> Su mensaje ha sido enviado con éxito. <strong>Pronto nos contactaremos con usted.</strong>
                </div>
            }
            @if (ViewBag.error != null)
            {
                <div class="alert alert-danger col-md-12" style="text-align:center;" role="alert">
                    <strong>¡OOPS!</strong> Al parecer hubo un error intentalo de nuevo más tarde.
                </div>
            }
            <div class="col-md-6 order-md-last pr-md-5">
                @using (Ajax.BeginForm("EnviarMensaje", "Papeles", new AjaxOptions { HttpMethod = "POST" }, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken();
                    <div class="form-group">
                        <input type="text" class="form-control" name="asunto" placeholder="Asunto" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="nombre" placeholder="Nombre" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="correo" placeholder="Correo" required>
                    </div>
                    <div class="form-group">
                        <input type="text" class="form-control" name="telefono" placeholder="Tel/Cel" required>
                    </div>
                    <div class="form-group">
                        <textarea name="mensaje" id="" cols="30" rows="7" class="form-control" placeholder="Mensaje" required></textarea>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Enviar Mensaje" class="btn btn-primary py-3 px-5">
                    </div>
                }
            </div>

            <div class="col-md-6">
                <div class="google-maps">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d931.5135511678819!2d-89.59066137082894!3d20.950338251572987!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x8f5671008183f537%3A0x43be28c30712be10!2zQ2FsbGUgMjPhtKwgMzMyLCBTYW4gSm9zw6kgVmVyZ2VsLCA5NzE3MyBNw6lyaWRhLCBZdWMu!5e0!3m2!1ses-419!2smx!4v1550888682740" width="600" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
                </div>
            </div>
        </div>
    </div>
</section>

